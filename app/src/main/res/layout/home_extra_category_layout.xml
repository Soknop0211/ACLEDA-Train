<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:id="@+id/cardIcon"
            android:background="@drawable/custom_circle"
            android:layout_margin="@dimen/size_2"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="@dimen/size_5"
                android:src="@drawable/baseline_home_24"
                app:tint="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingHorizontal="4dp"
            android:layout_marginHorizontal="4dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:minLines="2"
            android:textAllCaps="true"
            android:text="@string/favorite"
            android:textSize="10sp"
            android:textColor="@color/primary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/descriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_marginHorizontal="4dp"
                    android:maxLines="3"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:id="@+id/exchangeRateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/calculatorLayout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:paddingVertical="@dimen/size_5"
                                android:paddingHorizontal="@dimen/size_5"
                                android:background="@drawable/custom_left_corner"
                                android:maxLines="2"
                                android:textAllCaps="true"
                                android:text="1"
                                android:textColor="@color/primary"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:backgroundTint="@color/primary"
                                android:paddingVertical="@dimen/size_5"
                                android:background="@drawable/custom_right_corner"
                                android:paddingHorizontal="@dimen/size_10"
                                android:maxLines="2"
                                android:textAllCaps="true"
                                android:text="$"
                                android:textColor="@color/white"
                                android:textSize="11sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:background="@drawable/custom_left_corner"
                                android:paddingVertical="@dimen/size_5"
                                android:paddingHorizontal="@dimen/size_5"
                                android:maxLines="1"
                                android:textAllCaps="true"
                                android:text="4,100"
                                android:textColor="@color/primary"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:backgroundTint="@color/primary"
                                android:paddingVertical="@dimen/size_5"
                                android:background="@drawable/custom_right_corner"
                                android:paddingHorizontal="@dimen/size_10"
                                android:textAllCaps="true"
                                android:text="áŸ›"
                                android:textColor="@color/white"
                                android:textSize="11sp" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/size_5"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/size_25"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/size_8"
                            android:src="@drawable/ic_calculator"
                            android:scaleType="fitXY"
                            app:tint="@color/gray" />

                    </LinearLayout>

                    </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>