<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/size_5"
        android:layout_marginHorizontal="@dimen/size_10"
        app:cardCornerRadius="@dimen/size_10">

        <LinearLayout
            android:padding="@dimen/size_10"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/size_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_35"
                    android:layout_height="@dimen/size_35"
                    android:layout_gravity="center"
                    android:id="@+id/iconBank"
                    android:src="@drawable/acleda_logo"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/size_5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingHorizontal="@dimen/size_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginBottom="@dimen/size_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="ACLEDA Bank"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center|start"
                            android:maxLines="1"
                            android:textSize="14sp"
                            android:text="12-Dec-2023"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|start"
                android:text="Enjoy your holiday with your special people, happy new year 2024."
                android:textColor="@color/primary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>